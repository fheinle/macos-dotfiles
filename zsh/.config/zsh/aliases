alias ".."="cd .."
alias g="rg --smart-case --context 1"
alias gita="python3 -m gita"
alias k="kubectl"
alias l="exa --grid --classify --icons --color=auto --all --sort name"
alias ls="exa --header --long --classify --icons --color=auto --all --sort modified --time-style iso"
alias tree="ls --tree"
alias vi="nvim"
alias vimconfig="vim $HOME/.config/nvim/init.vim"
alias zshrc="vim $HOME/.config/zsh"
kgs () {
    if (kubectl get secret $@ &>/dev/null);
    then
        kubectl get secret $@ -o json|jq ".data|map_values(@base64d)"
    else
        echo "Secret not found: $@. Did you specify the correct namespace?" >> /dev/stderr
    fi
}
alias kubectl=kubecolor
